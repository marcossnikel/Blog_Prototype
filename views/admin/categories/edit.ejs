<%-include ("../../partials/header.ejs")%>
<%-include ("../../partials/navbar.ejs")%>

<div class="container">
    <hr>
    <div class="card">
        <div class = "card-header">
            <h2>Edit of Categories</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input class="form-control" type="text" name="title" placeholder="Title of your Categorie" value="<%= categorie.title%>">
                <input type="hidden" name="id" value="<%= categorie.id %>">
                <br><button class="btn btn-danger">Atualize</button>
            </form>
        </div>
    </div>
</div>


