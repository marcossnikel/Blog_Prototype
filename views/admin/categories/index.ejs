<%-include ("../../partials/header.ejs")%>
<%-include ("../../partials/navbar.ejs")%>

<div class="container">
    <hr>
    <h2>Categories</h2>
    <a class="btn btn-danger" href="/admin/categories/new">Create a new categorie </a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category =>{%>
             <tr>
                    <th><%=category.id%></th>
                    <th><%=category.title%></th>
                    <th><%=category.slug%></th>
                    <th>
                        <a href="/admin/categories/edit/<%=category.id%>" class="btn btn-warning">Edit</a>
                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmation(event,this)">
                            <input type="hidden" name="id" value="<%=category.id%>">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
    function confirmation(event, form){
        event.preventDefault();
        let decision = confirm("Do you want to delete this category ?")

        if(decision){
            form.submit();
        }else{
            console.log("I didnt want to delete")
        }
    }
</script>

